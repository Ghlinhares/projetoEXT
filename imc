peso = float(input("Digite seu peso em kg:"))
altura = float(input("Agora, digite sua altura em metros:"))
imc = peso / altura**2
input("certo, agora pressione ENTER para continuar:")
print(f"seu imc é:{imc}")

if imc <= 16:
    print("você está com magreza grave, o imc ideal é entre 20 a 25!")
elif imc <= 18.5:
    print("você está com magreza leve, o imc ideal é entre 20 a 25!") 
elif imc <= 25:
    print("você está saudavel!")
elif imc <= 30:
    print("você está com sobrepeso, o imc ideal é entre 20 a 25!")
else:
    print("você está com obesidade, o imc ideal é entre 20 a 25!")
